<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_regis"
    android:fillViewport="true"
    tools:context="com.lovepetapp.pet.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp">

        <!--<Button-->
        <!--android:id="@+id/button_photo"-->
        <!--android:layout_width="120dp"-->
        <!--android:layout_height="120dp"-->
        <!--android:layout_marginLeft="200dp"-->
        <!--android:background="@drawable/photo"-->
        <!--/>-->

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_profile_edit"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:layout_gravity="end"
            android:background="@drawable/photo"
            app:riv_corner_radius="60dp"
            app:riv_border_color="@color/bg_pro_pic"
            app:riv_border_width="5dp"/>



        <!--Name-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="ชื่อ"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="@font/bangnampueng"
                    android:textSize="@dimen/text_header"/>                    />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@android:color/white"
                    android:theme="@style/TextLabel"
                    android:layout_marginLeft="60dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/bangnampueng"
                    android:textSize="@dimen/text_header"
                    app:backgroundTint="@color/black">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/et_regis_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:inputType="textPersonName"
                        android:maxLines="1"
                        android:textStyle="bold"
                        android:fontFamily="@font/bangnampueng"
                        android:padding="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_header" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll1"
                android:gravity="bottom"
                android:layout_marginLeft="80dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="1dp"
                    android:layout_height="5dp"
                    android:background="@color/black" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/black" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="5dp"
                    android:background="@color/black" />

            </LinearLayout>

        </RelativeLayout>

        <!--Email-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:id="@+id/ll2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="อีเมล์"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="@font/bangnampueng"
                    android:textSize="@dimen/text_header"/>                    />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@android:color/white"
                    android:layout_marginLeft="30dp"
                    android:theme="@style/TextLabel"
                    app:backgroundTint="@color/black">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/et_regis_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/bangnampueng"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_header" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll2"
                android:layout_marginLeft="80dp"
                android:gravity="bottom"
                android:orientation="horizontal">

                <View
                    android:layout_width="1dp"
                    android:layout_height="5dp"
                    android:background="@color/black" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/black" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="5dp"
                    android:background="@color/black" />

            </LinearLayout>

        </RelativeLayout>
        <!--Phone-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:id="@+id/ll5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="เบอร์โทร"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="@font/bangnampueng"
                    android:textSize="@dimen/text_header"/>                    />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@android:color/white"
                    android:theme="@style/TextLabel"
                    android:layout_marginLeft="15dp"
                    app:backgroundTint="@color/white">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/et_regis_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/bangnampueng"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_header" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll5"
                android:gravity="bottom"
                android:layout_marginLeft="100dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="1dp"
                    android:layout_height="5dp"
                    android:background="@color/black" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/black" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="5dp"
                    android:background="@color/black" />

            </LinearLayout>

        </RelativeLayout>

        <!--Password-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:id="@+id/ll3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="ที่อยู่"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/bangnampueng"
                    android:textSize="@dimen/text_header"/>                    />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@android:color/white"
                    android:theme="@style/TextLabel"
                    android:layout_marginLeft="40dp"
                    app:backgroundTint="@color/black">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/et_regis_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:inputType="textPersonName"
                        android:maxLines="1"
                        android:padding="2dp"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_header" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll3"
                android:gravity="bottom"
                android:layout_marginLeft="80dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="1dp"
                    android:layout_height="5dp"
                    android:background="@color/black" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/black" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="5dp"
                    android:background="@color/black" />

            </LinearLayout>

        </RelativeLayout>

        <!--Confirm Password-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:id="@+id/ll4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="รหัสผ่าน"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="@font/bangnampueng"
                    android:textSize="@dimen/text_header"
                    />


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@android:color/white"
                    android:theme="@style/TextLabel"
                    app:backgroundTint="@color/white">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/et_regis_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/bangnampueng"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_header" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll4"
                android:gravity="bottom"
                android:layout_marginLeft="80dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="1dp"
                    android:layout_height="5dp"
                    android:background="@color/black" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/black" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="5dp"
                    android:background="@color/black" />

            </LinearLayout>

        </RelativeLayout>


        <Button
            android:id="@+id/button_register"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="@drawable/save"
            android:paddingLeft="40dp"
            android:paddingRight="40dp" />





    </LinearLayout>

</ScrollView>