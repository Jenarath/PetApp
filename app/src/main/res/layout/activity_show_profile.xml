<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_regis">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_show_profile"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/white"
        app:layout_collapseMode="pin"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:popupTheme="@style/AppTheme.PopupOverlay">
        <TextView
            android:id="@+id/toolbar_title_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ข้อมูลบัญชีผู้ใช้"
            android:textSize="@dimen/text_header"
            android:textStyle="bold"
            android:fontFamily="@font/bangnampueng"
            android:textColor="@color/black"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_gravity="center" />
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/textView_notlog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/not_log"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:visibility="gone"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:layout_margin="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="20dp">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/iv_profile"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    app:riv_corner_radius="60dp"
                    app:riv_border_color="@color/bg_pro_pic"
                    app:riv_border_width="5dp"/>

                <!--<ImageView-->
                <!--android:id="@+id/iv_edit_pro_ic"-->
                <!--android:layout_width="30dp"-->
                <!--android:layout_height="30dp"-->
                <!--android:src="@drawable/edit_pro_pic"-->
                <!--android:layout_alignParentBottom="true"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_alignParentEnd="true"-->
                <!--android:layout_marginEnd="4dp"-->
                <!--android:layout_marginRight="4dp"-->
                <!--android:layout_marginBottom="7dp"/>-->

            </RelativeLayout>

            <!--Name-->


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:text="ชื่อ"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="@font/bangnampueng"
                    android:textSize="@dimen/text_header" />

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="@dimen/text_header"
                    android:textColor="@color/black"

                    android:layout_marginTop="10dp"
                    android:text="test"
                    android:textStyle="bold"
                    android:fontFamily="@font/bangnampueng"
                    android:textSize="@dimen/text_header" />
            </LinearLayout>

            <!--Name-->

            <!--Email-->



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"

                    android:text="Email"
                    android:textStyle="bold"
                    android:fontFamily="@font/bangnampueng"
                    android:textSize="@dimen/text_header"/>

                <TextView
                    android:id="@+id/txtEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="@dimen/text_header"
                    android:textColor="@color/black"

                    android:layout_marginTop="10dp"
                    android:text="test"
                    android:textStyle="bold"
                    android:fontFamily="@font/bangnampueng"
                    android:textSize="@dimen/text_header" />
            </LinearLayout>

            <!--Email-->



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:text="เบอร์โทร"
                    android:textColor="@color/black"

                    android:textStyle="bold"
                    android:fontFamily="@font/bangnampueng"
                    android:textSize="@dimen/text_header"
                    />

                <TextView
                    android:id="@+id/txtPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="@dimen/text_header"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"

                    android:textStyle="bold"
                    android:fontFamily="@font/bangnampueng"
                    android:textSize="@dimen/text_header"
                    android:text="test" />
            </LinearLayout>

            <!--Phone-->



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:text="ที่อยู่"
                    android:textStyle="bold"
                    android:textColor="@color/black"

                    android:fontFamily="@font/bangnampueng"
                    android:textSize="@dimen/text_header"
                  />

                <TextView
                    android:id="@+id/txtAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="@dimen/text_header"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"

                    android:textStyle="bold"
                    android:fontFamily="@font/bangnampueng"
                    android:textSize="@dimen/text_header"
                    android:text="test" />
            </LinearLayout>

            <!--Phone-->

            <!--Address-->




            <!--Address-->


            <!--</LinearLayout>-->

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/button_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:layout_gravity="center"
                android:background="@drawable/edit"/>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_adView_profedit"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>