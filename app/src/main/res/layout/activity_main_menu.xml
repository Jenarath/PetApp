<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_menu"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



    <Button
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/ic_setting"
        android:id="@+id/btnset"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="60dp"
        android:textStyle="bold"
        android:fontFamily="@font/bangnampueng"
        android:text="@string/app_name" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/m01"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/m01"
            android:layout_marginRight="40dp" />
        <Button
            android:id="@+id/m02"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/m02"
            android:layout_marginLeft="40dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:textSize="@dimen/abc"
            android:textStyle="bold"
            android:fontFamily="@font/bangnampueng"
            android:layout_marginRight="125dp"
            android:text="สัตว์เลี้ยง" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textSize="@dimen/abc"
            android:textStyle="bold"
            android:fontFamily="@font/bangnampueng"
            android:text="โปรโมชั่น" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp">
        <Button
            android:id="@+id/m03"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/m03"
            android:layout_marginRight="40dp" />
        <Button
            android:id="@+id/m04"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/m04"
            android:layout_marginLeft="40dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginRight="140dp"
            android:textSize="@dimen/abc"
            android:textStyle="bold"
            android:fontFamily="@font/bangnampueng"
            android:text="วัคซีน" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/abc"
            android:textStyle="bold"
            android:fontFamily="@font/bangnampueng"
            android:layout_gravity="end"
            android:text="นัดหมาย" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/m05"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/m05"
            android:layout_marginRight="40dp" />
        <Button
            android:id="@+id/m06"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/m06"
            android:layout_marginLeft="40dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:textSize="@dimen/abc"
            android:textStyle="bold"
            android:fontFamily="@font/bangnampueng"
            android:layout_marginRight="115dp"
            android:text="เกร็ดความรู้" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textSize="@dimen/abc"
            android:textStyle="bold"
            android:fontFamily="@font/bangnampueng"
            android:text="โรงพยาบาล" />
    </LinearLayout>

    </LinearLayout>


</ScrollView>